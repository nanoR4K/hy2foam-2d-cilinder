FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      Tv;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/initialConditions"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $Tve;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $Tve;
    }
    
    fire
    {
        type            nonEqSmoluchowskiJumpTvMix;
        accommodationCoeff 1;
        Twall            $Twall;
        value            $Twall;
    }
    
    #include "include/boundaries"
}

